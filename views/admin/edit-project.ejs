<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-project<% } else { %>project/add-project<% } %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="price">URL</label>
                <input type="text" name="url" id="price" value="<% if (editing) { %><%= project.url %><% } %>">
            </div>

            <div class="form-control">
                <label for="description">Category</label>
                <input type="text" name="category" id="description" value="<% if (editing) { %><%= project.category %><% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <input name="description" id="description"><% if (editing) { %><%= project.description %><% } %></input>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= project.id %>" name="projectId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Project<% } else { %>Add Project<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
