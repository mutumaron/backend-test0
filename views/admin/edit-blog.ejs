<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-blog<% } else { %>blog/add-blog<% } %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= blog.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
                <label for="price">URL</label>
                <input type="text" name="url" id="price" value="<% if (editing) { %><%= blog.url %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Category</label>
                <input type="text" name="category" id="description" value="<% if (editing) { %><%= blog.category %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= blog.id %>" name="blogId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Blog<% } else { %>Add Blog<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>