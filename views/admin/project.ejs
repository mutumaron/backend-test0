<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <% include('../includes/navigation.ejs') %>
    <main>
        <% if (projects.length > 0) { %>
        <div class="grid">
            <% for (let project of projects) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= project.description %>
                    </h1>
                </header>
                <div class="card__content">
                    <h2 class="product__price">$<%= project.url %></h2>
                </div>
                <div class="card__image">
                    <img src="<%= project.image %>" alt="<%= project.url %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= project.category %></h2>
                </div>
                
                <div class="card__actions">
                    <a href="/admin/edit-project/<%= project.id %>?edit=true" class="btn">Edit</a>
                    <form action="/admin/delete-project" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" value="<%= project.id %>" name="projectId">
                        <button class="btn" type="submit">Delete</button>
                    </form>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Projects Found!</h1>
        <% } %>
    </main>
</body>
</html>
