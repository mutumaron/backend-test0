<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-deal<% } else { %>deal/add-deal<% } %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= deal.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image" >
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= deal.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Category</label>
                <input type="text" name="category" id="description" value="<% if (editing) { %><%= deal.category %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= deal.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= deal.id %>" name="dealId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Deal<% } else { %>Add Deal<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>